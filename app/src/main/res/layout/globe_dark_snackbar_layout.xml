<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.App.SnackbarTheme"
    app:cardCornerRadius="@dimen/corner_radius_xxsmall">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_success_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_smedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_go_create_snackbar" />

        <TextView
            android:id="@+id/tv_globe_snackbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xstandard"
            android:layout_marginTop="@dimen/margin_xstandard"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="@string/add_more_inclusions"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_xmedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_success_drawable"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_globe_snackbar_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xstandard"
            android:layout_marginTop="@dimen/margin_xxxsmall"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/get_more_out_of_gocreate_by_increasing_your_all_access_data"
            android:textColor="?attr/colorOnBackground"
            android:textSize="@dimen/text_size_standard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_success_drawable"
            app:layout_constraintTop_toBottomOf="@id/tv_globe_snackbar_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
