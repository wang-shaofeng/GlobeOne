<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_standard">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account_number" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xxstandard"
        android:text="@string/account_number"
        android:textAppearance="?smallBoldContent"
        android:textColor="?primary"
        app:layout_constraintBottom_toBottomOf="@id/iv_account_number"
        app:layout_constraintStart_toEndOf="@id/iv_account_number"
        app:layout_constraintTop_toTopOf="@id/iv_account_number" />

</androidx.constraintlayout.widget.ConstraintLayout>
