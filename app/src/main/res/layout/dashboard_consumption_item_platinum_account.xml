<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/consumption_height"
    android:background="?corporateA800">

    <ImageView
        android:id="@+id/iv_data_bucket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xstandard"
        android:layout_marginBottom="@dimen/margin_xxxsmall"
        app:layout_constraintBottom_toTopOf="@id/tv_unlimited_data_description"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_data_bucket" />

    <TextView
        android:id="@+id/tv_unlimited_data_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_ssmedium"
        android:text="@string/dashboard_consumption_platinum_account_description"
        android:textAppearance="?smallRegularContent"
        android:textColor="?highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
