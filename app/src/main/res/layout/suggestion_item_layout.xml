<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_suggestion_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/filter_item_shape">

    <TextView
        android:id="@+id/tv_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xxstandard"
        android:layout_marginTop="@dimen/margin_xstandard"
        android:layout_marginEnd="@dimen/margin_xxsmall"
        android:layout_marginBottom="@dimen/margin_xstandard"
        android:textAppearance="?smallRegularContent"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_selector"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_xxstandard"
        app:layout_constraintBottom_toBottomOf="@id/tv_suggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_suggestion"
        app:layout_constraintTop_toTopOf="@id/tv_suggestion"
        app:srcCompat="@drawable/ic_gray_broken_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>
