<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?caution">

    <ImageView
        android:id="@+id/iv_inactive_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xstandard"
        android:layout_marginTop="@dimen/margin_xstandard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_inactive_number" />

    <TextView
        android:id="@+id/tv_inactive_account_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/account_details_inactive_header_title"
        android:textAppearance="?xBaseMultiline"
        android:textColor="?absoluteWhite"
        app:layout_constraintStart_toEndOf="@id/iv_inactive_account"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_inactive_account_header_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_standard"
        android:text="@string/account_details_inactive_header_description"
        android:textAppearance="?xSmallRegularContent"
        android:textColor="?absoluteWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_inactive_account_header_title"
        app:layout_constraintTop_toBottomOf="@id/tv_inactive_account_header_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
