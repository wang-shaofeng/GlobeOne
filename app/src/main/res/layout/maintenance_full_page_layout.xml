<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?neutralB2">

    <ImageView
        android:id="@+id/iv_maintenance"
        android:layout_width="@dimen/imageview_maintenance_width"
        android:layout_height="@dimen/imageview_maintenance_height_large"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_maintenance_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_xxxxxlarge"
        android:layout_marginTop="@dimen/margin_xxstandard"
        android:text="@string/maintenance_title"
        android:textAlignment="center"
        android:textAppearance="?mediumBold"
        android:textColor="?accentDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_maintenance" />

    <TextView
        android:id="@+id/tv_maintenance_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_xxxxxlarge"
        android:layout_marginTop="@dimen/maintenance_content_margin_top"
        android:gravity="center"
        android:text="@string/maintenance_content"
        android:textAppearance="?baseRegularContent"
        android:textColor="?neutralB0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_maintenance_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
