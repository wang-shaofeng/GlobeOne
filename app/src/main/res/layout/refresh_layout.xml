<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?accentLight"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_refresh"
        android:layout_width="@dimen/default_animation_size"
        android:layout_height="@dimen/refresh_layout_animation_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/refresh_loading" />

    <TextView
        android:id="@+id/tv_pull_to_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pull_to_refresh"
        android:textAppearance="?smallRegularContent"
        android:textColor="?neutralA1" />

</LinearLayout>
