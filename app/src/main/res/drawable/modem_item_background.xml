<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="?absoluteWhite" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?neutralA5" />
            <corners android:radius="@dimen/corner_radius_xxxxsmall" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?absoluteWhite" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?primary" />
            <corners android:radius="@dimen/corner_radius_xxxxsmall" />
        </shape>
    </item>

</selector>
