<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_horizontal">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/stroke_width_standard"
                    android:color="?highlight"
                    android:dashWidth="@dimen/content_promo_line_dash_width"
                    android:dashGap="@dimen/content_promo_line_dash_gap" />
            </shape>
        </rotate>
    </item>
</layer-list>
