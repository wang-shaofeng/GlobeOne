<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <stroke android:width="@dimen/stroke_width_small" android:color="?neutralA5" />
            <corners android:radius="@dimen/corner_radius_xxxxsmall" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?attr/primary" />
            <corners android:radius="@dimen/corner_radius_xxxxsmall" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/neutralB2" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?attr/neutralA5" />
            <corners android:radius="@dimen/corner_radius_xxxxsmall" />
        </shape>
    </item>
</selector>
