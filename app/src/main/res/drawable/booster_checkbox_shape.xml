<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?neutralA4" />
            <corners android:radius="@dimen/corner_radius_xxxxxsmall" />
        </shape>
    </item>

    <item android:drawable="@drawable/ic_checkbox_selected" android:state_selected="true" android:state_enabled="true" />

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/neutralB1" />
            <stroke android:width="@dimen/stroke_width_standard" android:color="?neutralA4" />
            <corners android:radius="@dimen/corner_radius_xxxxxsmall" />
        </shape>
    </item>

</selector>
