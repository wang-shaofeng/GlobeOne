<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/content_promo_circle_outside_radius"
                android:height="@dimen/content_promo_circle_outside_half_radius" />
            <solid android:color="?neutralA5" />
            <corners
                android:bottomLeftRadius="@dimen/content_promo_circle_outside_half_radius"
                android:bottomRightRadius="@dimen/content_promo_circle_outside_half_radius" />
        </shape>
    </item>
    <item
        android:gravity="top"
        android:left="@dimen/stroke_width_small"
        android:right="@dimen/stroke_width_small">
        <shape android:shape="rectangle">
            <size
                android:width="@dimen/content_promo_circle_inside_radius"
                android:height="@dimen/content_promo_circle_inside_half_radius" />
            <solid android:color="?neutralB2" />
            <corners
                android:bottomLeftRadius="@dimen/content_promo_circle_inside_half_radius"
                android:bottomRightRadius="@dimen/content_promo_circle_inside_half_radius" />
        </shape>
    </item>
</layer-list>
